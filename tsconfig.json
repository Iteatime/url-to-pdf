{
    "compilerOptions": {
        "target": "es2017",
        "module": "commonjs",
        "declaration": true,
        "outDir": "./dist",
        "strict": true,
        "sourceMap": true,
        "esModuleInterop": true
    },
    "types": [
        "node"
    ],
    "include": [
        "./src/**/*.ts"
    ],
    "exclude": [
        "./src/**/*.spec.ts",
        "./node_modules",
        "./dist"
    ]
}